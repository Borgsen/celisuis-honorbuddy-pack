      <InteractionAction Entry="5512" InteractDelay="3" InteractType="NPC" GameObjectType="Mailbox" SpellFocus="Anvil" />
      <SellItemAction NpcEntry="5512" X="0" Y="0" Z="0" ItemID="63122" Count="0" SellItemType="Specific" />
